<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingTop="13dp"
        android:background="@drawable/navigation_background"
        android:paddingEnd="20dp"
        android:paddingBottom="13dp"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="?color_dark"
                android:layout_marginEnd="13dp">

                <TextView
                    android:id="@id/walkthrough_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:layout_gravity="center"
                    android:textColor="?color_light_separate"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/walkthrough_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wizard Title"
                    android:textColor="?color_dark"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@id/walkthrough_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wizard Description"
                    android:textColor="?color_dark"
                    android:textSize="12sp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>