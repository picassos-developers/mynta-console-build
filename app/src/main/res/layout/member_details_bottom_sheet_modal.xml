<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="41dp"
        android:layout_height="6dp"
        android:layout_marginTop="15dp"
        android:background="?divider_inline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/user_details"
        android:textColor="?color_dark"
        android:textSize="13sp"
        tools:ignore="SmallSp" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="?color_background"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@id/member_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textColor="?color_dark"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@id/progress_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="?color_dark" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@id/member_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="?color_dark"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@id/member_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?color_dark"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@id/delete_member"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/input_background_alternative"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/delete_user"
        android:textAllCaps="false"
        android:textColor="?color_dark"
        android:textSize="@dimen/input_text_size" />

</LinearLayout>