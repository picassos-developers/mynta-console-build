<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_background"
    android:layout_margin="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@id/dialog_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close"
            app:tint="?color_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/manage_credentials"
            android:textColor="?color_dark" />

    </RelativeLayout>

    <LinearLayout
        android:id="@id/copy_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@id/post_design_chooser"
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="35dp"
            app:cardBackgroundColor="?color_light_separate"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@id/post_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼ ✼"
                android:textColor="?color_dark"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_copy"
            app:tint="?color_dark"
            android:layout_marginStart="9dp"
            tools:ignore="ContentDescription,RtlSymmetry" />

    </LinearLayout>

    <TextView
        android:id="@id/agreement_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColorLink="?color_dark"
        android:text="@string/sak_notice"
        android:textColor="?color_dark"
        android:textSize="12sp" />

</LinearLayout>
