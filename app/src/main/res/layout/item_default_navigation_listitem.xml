<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/provider_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="15dp"
    android:orientation="horizontal"
    android:background="@drawable/item_background_darker">

    <ImageView
        android:id="@id/provider_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:background="@drawable/circle_dark"
        android:src="@drawable/icon_wordpress"
        app:tint="?color_light_separate"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@id/provider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wordpress"
            android:textColor="?color_dark"
            android:textStyle="bold"
            android:textSize="13sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_posts_news_articles_and_more_in_your_app_using_wordpress_content_provider"
            android:textColor="?color_dark"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap" />

    </LinearLayout>

</LinearLayout>